<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">


    <TextView
        android:id="@+id/forget_tv_title"
        android:layout_width="0dp" android:layout_height="44dp"
        android:gravity="center"
        android:text="忘记密码"
        android:textColor="@color/gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />

    <ImageView
        android:id="@+id/forget_back"
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/fanhui"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/forget_tv_title"
        app:layout_constraintBottom_toBottomOf="@id/forget_tv_title"
        />

    <ImageView
        android:id="@+id/forget_img_logo"
        android:layout_width="60dp"
        android:layout_height="63dp"
        android:layout_marginTop="41dp"
        android:src="@mipmap/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_tv_title"/>

    <EditText
        android:id="@+id/forget_ed_phone"
        android:layout_width="345dp"
        android:layout_height="46dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLength="11"
        android:paddingLeft="51dp"
        android:textColorHint="@color/hui"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_img_logo"/>

    <ImageView
        android:layout_width="13dp"
        android:layout_height="19dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="13.5dp"
        android:src="@mipmap/cellphone"
        app:layout_constraintStart_toStartOf="@id/forget_ed_phone"
        app:layout_constraintTop_toTopOf="@id/forget_ed_phone"/>

    <EditText
        android:id="@+id/forget_ed_img_code"
        android:layout_width="345dp"
        android:layout_height="46dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:hint="请输入图片验证码"
        android:maxLength="4"
        android:paddingLeft="51dp"
        android:textColorHint="@color/hui"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_ed_phone"/>

    <ImageView
        android:id="@+id/login_quick_img"
        android:layout_width="13dp"
        android:layout_height="19dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="13.5dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="@id/forget_ed_img_code"
        app:layout_constraintTop_toTopOf="@id/forget_ed_img_code"/>

    <ImageView
        android:id="@+id/forget_img_img_code"
        android:layout_width="84dp"
        android:layout_height="0dp"
        android:src="@mipmap/logo"
        app:layout_constraintBottom_toBottomOf="@id/forget_ed_img_code"
        app:layout_constraintEnd_toEndOf="@id/forget_ed_img_code"
        app:layout_constraintTop_toTopOf="@id/forget_ed_img_code"/>

    <EditText
        android:id="@+id/forget_ed_code"
        android:layout_width="345dp"
        android:layout_height="46dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:hint="请输入验证码"
        android:inputType="number"
        android:textColorHint="@color/hui"
        android:textSize="15sp"
        android:maxLength="6"
        android:paddingLeft="51dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_ed_img_code"/>

    <ImageView
        android:layout_width="13dp"
        android:layout_height="19dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="13.5dp"
        android:src="@mipmap/identifyingcode"
        app:layout_constraintStart_toStartOf="@id/forget_ed_code"
        app:layout_constraintTop_toTopOf="@id/forget_ed_code"/>

    <View
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:background="@color/view_bg"
        app:layout_constraintBottom_toBottomOf="@id/forget_ed_code"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="125dp"
        app:layout_constraintTop_toTopOf="@+id/forget_ed_code"/>

    <TextView
        android:id="@+id/forget_tv_get_code"
        android:layout_width="110dp"
        android:layout_height="46dp"
        android:gravity="center"
        android:text="获取验证码"
        android:textSize="15sp"
        android:textColor="@color/red"
        app:layout_constraintEnd_toEndOf="@id/forget_ed_code"
        app:layout_constraintTop_toTopOf="@id/forget_ed_code"/>

    <EditText
        android:id="@+id/forget_ed_password"
        android:layout_width="345dp"
        android:layout_height="46dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:paddingLeft="51dp"
        android:maxLength="12"
        android:hint="密码为6-12位的数字和字母组成"
        android:inputType="textPassword"
        android:textColorHint="@color/hui"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_ed_code"/>

    <ImageView
        android:layout_width="13dp"
        android:layout_height="19dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="13.5dp"
        android:src="@mipmap/password"
        app:layout_constraintStart_toStartOf="@id/forget_ed_password"
        app:layout_constraintTop_toTopOf="@id/forget_ed_password"/>

    <Button
        android:id="@+id/forget_button_forget"
        android:layout_width="345dp"
        android:layout_height="44.5dp"
        android:layout_marginTop="42.5dp"
        android:background="@mipmap/button"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_ed_password"/>

</android.support.constraint.ConstraintLayout>