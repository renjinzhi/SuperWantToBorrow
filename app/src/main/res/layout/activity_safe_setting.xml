<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/safe_title"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="安全设置"
        android:textColor="@color/gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/safe_back"

        android:layout_width="50dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/fanhui"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/safe_title"
        app:layout_constraintTop_toTopOf="@id/safe_title"/>


    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/safe_tv_pass"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:text="修改登录密码"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/safe_title"
        android:layout_width="0dp" android:layout_height="50dp"/>

    <ImageView
        android:src="@mipmap/biao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/safe_tv_pass"
        app:layout_constraintBottom_toBottomOf="@id/safe_tv_pass"
        android:layout_marginRight="15dp"
        android:layout_width="8dp" android:layout_height="15dp"/>


    <Button
        android:id="@+id/safe_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/safe_tv_pass"
        android:layout_marginTop="40dp"
        android:background="@mipmap/button"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_width="345dp" android:layout_height="44.5dp"/>

</android.support.constraint.ConstraintLayout>