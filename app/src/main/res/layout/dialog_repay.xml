<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="325.5dp"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp"
        android:id="@+id/dialog_repay_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="温馨提示"
        android:textColor="@color/text_gray"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <ImageView
        android:id="@+id/dialog_repay_img"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginRight="20dp"
        android:src="@mipmap/close"
        app:layout_constraintBottom_toBottomOf="@id/dialog_repay_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/dialog_repay_title"/>


    <TextView
        android:id="@+id/dialog_repay_mess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="请输入您收到的验证码"
        android:textColor="@color/gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_repay_title"/>


    <EditText
        android:background="@mipmap/shurukuang"
        android:id="@+id/dialog_repay_et"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="29dp"
        android:inputType="number"
        android:maxLength="6"
        app:layout_constraintTop_toBottomOf="@id/dialog_repay_mess"
        android:layout_width="160dp" android:layout_height="40dp"/>

    <Button
        android:id="@+id/dialog_repay_get"
        android:text="获取验证码"
        android:textColor="@color/six_e"
        android:textSize="14sp"
        android:background="@mipmap/yanzhengma"
        app:layout_constraintTop_toBottomOf="@id/dialog_repay_mess"
        android:layout_marginTop="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="29dp"
        android:layout_width="100dp" android:layout_height="40dp"/>

    <Button
        android:id="@+id/dialog_repay_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_repay_et"
        android:layout_marginTop="23dp"
        android:background="@mipmap/button_1"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:text="确定"
        android:layout_marginBottom="28dp"
        android:layout_width="233dp" android:layout_height="40dp"/>

</android.support.constraint.ConstraintLayout>