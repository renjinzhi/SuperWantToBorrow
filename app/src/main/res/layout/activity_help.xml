<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/help_title"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="帮助中心"
        android:textColor="@color/gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/help_back"
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/fanhui"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/help_title"
        app:layout_constraintBottom_toBottomOf="@id/help_title"
        />

    <ImageView
        android:id="@+id/help_img_mess"
        android:src="@mipmap/banner_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/help_title"
        android:layout_width="0dp" android:layout_height="150dp"/>

    <TextView
        android:id="@+id/help_tv_how"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:text="如何借款"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/help_img_mess"
        android:layout_width="0dp" android:layout_height="50dp"/>
    
    <ImageView
        android:src="@mipmap/biao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/help_tv_how"
        app:layout_constraintBottom_toBottomOf="@id/help_tv_how"
        android:layout_marginRight="15dp"
        android:layout_width="8dp" android:layout_height="15dp"/>

    <View
        android:id="@+id/help_view_how"
        android:background="@color/view_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="@id/help_tv_how"
        android:layout_width="0dp" android:layout_height="1dp"/>


    <TextView
        android:id="@+id/help_tv_time"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:text="审核多长时间"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/help_view_how"
        android:layout_width="0dp" android:layout_height="50dp"/>

    <ImageView
        android:src="@mipmap/biao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/help_tv_time"
        app:layout_constraintBottom_toBottomOf="@id/help_tv_time"
        android:layout_marginRight="15dp"
        android:layout_width="8dp" android:layout_height="15dp"/>

    <View
        android:id="@+id/help_view_time"
        android:background="@color/view_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="@id/help_tv_time"
        android:layout_width="0dp" android:layout_height="1dp"/>


    <TextView
        android:id="@+id/help_tv_why"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:text="为什么借款失败"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/help_view_time"
        android:layout_width="0dp" android:layout_height="50dp"/>

    <ImageView
        android:src="@mipmap/biao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/help_tv_why"
        app:layout_constraintBottom_toBottomOf="@id/help_tv_why"
        android:layout_marginRight="15dp"
        android:layout_width="8dp" android:layout_height="15dp"/>

    <View
        android:id="@+id/help_view_why"
        android:background="@color/view_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="@id/help_tv_why"
        android:layout_width="0dp" android:layout_height="1dp"/>

    <TextView
        android:id="@+id/help_tv_state"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:text="还款后账户更新状态"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/help_view_why"
        android:layout_width="0dp" android:layout_height="50dp"/>

    <ImageView
        android:src="@mipmap/biao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/help_tv_state"
        app:layout_constraintBottom_toBottomOf="@id/help_tv_state"
        android:layout_marginRight="15dp"
        android:layout_width="8dp" android:layout_height="15dp"/>

    <TextView
        android:id="@+id/help_tv_mess"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/help_tv_state"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:text="常见问题"
        android:textColor="@color/nine"
        android:textSize="15sp"
        android:layout_width="wrap_content" android:layout_height="40dp"/>


    <RelativeLayout
        android:id="@+id/help_rela_repay_ques"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/help_tv_mess"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="125dp" android:layout_height="70dp">

        <ImageView
            android:layout_marginLeft="51.5dp"
            android:layout_marginTop="11dp"
            android:src="@mipmap/auditing"
            android:layout_width="22dp"
            android:layout_height="21dp"/>

        <TextView
            android:gravity="center_horizontal"
            android:layout_marginTop="44dp"
            android:text="还款问题"
            android:textSize="14sp"
            android:textColor="@color/six_e"
            android:layout_width="125dp" android:layout_height="wrap_content"/>

        <View
            android:background="@color/view_bg"
            android:layout_alignParentRight="true"
            android:layout_width="1dp" android:layout_height="match_parent"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/help_rela_borrow_ques"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/help_tv_mess"
        app:layout_constraintStart_toEndOf="@id/help_rela_repay_ques"
        android:layout_width="125dp" android:layout_height="70dp">

        <ImageView
            android:layout_marginLeft="51.5dp"
            android:id="@+id/help_img_ques"
            android:layout_marginTop="11dp"
            android:src="@mipmap/auditing"
            android:layout_width="22dp"
            android:layout_height="21dp"/>

        <TextView
            android:gravity="center_horizontal"
            android:layout_marginTop="44dp"
            android:text="借款问题"
            android:textSize="14sp"
            android:textColor="@color/six_e"
            android:layout_width="125dp" android:layout_height="wrap_content"/>

        <View
            android:background="@color/view_bg"
            android:layout_alignParentRight="true"
            android:layout_width="1dp" android:layout_height="match_parent"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/help_rela_data"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/help_tv_mess"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="125dp" android:layout_height="70dp">

        <ImageView
            android:layout_marginLeft="51.5dp"
            android:id="@+id/help_img_data"
            android:layout_marginTop="11dp"
            android:src="@mipmap/auditing"
            android:layout_width="22dp"
            android:layout_height="21dp"/>

        <TextView
            android:gravity="center_horizontal"
            android:layout_marginTop="44dp"
            android:text="审核资料"
            android:textSize="14sp"
            android:textColor="@color/six_e"
            android:layout_width="125dp" android:layout_height="wrap_content"/>

    </RelativeLayout>


<Button
    android:id="@+id/help_button_online"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/help_rela_borrow_ques"
    android:layout_marginTop="40dp"
    android:textColor="@color/white"
    android:textSize="17sp"
    android:text="咨询在线客服"
    android:background="@mipmap/button"
    android:layout_width="345dp"
    android:layout_height="44.5dp"/>

</android.support.constraint.ConstraintLayout>