<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cp_title"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="修改密码"
        android:textColor="@color/gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/cp_back"

        android:layout_width="50dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/fanhui"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/cp_title"
        app:layout_constraintTop_toTopOf="@id/cp_title"/>


    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/cp_tv_phone"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:text="xxxxxxxxxxx"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cp_title"
        android:layout_width="0dp" android:layout_height="50dp"/>



    <EditText
    android:id="@+id/cp_ed_pass_old"
    android:layout_width="0dp"
    android:layout_height="50dp"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:hint="请输入旧密码"
    android:inputType="textPassword"
    android:textColorHint="@color/nine"
    android:textColor="@color/gray"
    android:textSize="15sp"
    android:maxLength="12"
    android:paddingLeft="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/cp_tv_phone"/>

    <View
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/cp_ed_pass_old"
        android:layout_marginLeft="20dp"
        android:background="@color/view_bg"
        android:layout_width="0dp" android:layout_height="1dp"/>


    <EditText
        android:id="@+id/cp_ed_pass_new"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        android:textColorHint="@color/nine"
        android:textColor="@color/gray"
        android:textSize="15sp"
        android:maxLength="12"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cp_ed_pass_old"/>

    <View
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/cp_ed_pass_new"
        android:layout_marginLeft="20dp"
        android:background="@color/view_bg"
        android:layout_width="0dp" android:layout_height="1dp"/>

    <EditText
        android:id="@+id/cp_ed_pass_new_again"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:hint="请确认新密码"
        android:inputType="textPassword"
        android:textColorHint="@color/nine"
        android:textColor="@color/gray"
        android:textSize="15sp"
        android:maxLength="12"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cp_ed_pass_new"/>

    <Button
        android:id="@+id/cp_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cp_ed_pass_new_again"
        android:layout_marginTop="40dp"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:background="@mipmap/button"
        android:layout_width="345dp"
        android:layout_height="44.5dp"/>


</android.support.constraint.ConstraintLayout>