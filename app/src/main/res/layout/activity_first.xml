<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hjm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hjm.bottomtabbar.BottomTabBar
        hjm:tab_isshow_divider="true"
        hjm:tab_divider_background="@color/divider"
        android:id="@+id/bottom_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        hjm:tab_font_size="11sp"
        hjm:tab_img_font_padding="6.5px"
        hjm:tab_img_height="10.5dp"
        hjm:tab_img_width="10.5dp"
        hjm:tab_padding_top="8.5px"
        hjm:tab_unselected_color="#BFBFBF"/>

</android.support.constraint.ConstraintLayout>