<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center" android:text="绑定银行卡"
        android:textColor="@color/gray"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/repayment_detail_5"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="第5/5步"
        android:textColor="@color/gray"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/bind_bank_back"
        android:layout_width="8dp" android:layout_height="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@id/repayment_detail_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/repayment_detail_5"
        app:srcCompat="@mipmap/back"/>

    <View
        android:id="@+id/bind_bank_title_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/view_bg"
        app:layout_constraintBottom_toBottomOf="@+id/repayment_detail_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="银行卡号"
        android:textColor="@color/nine"
        android:inputType="number"

        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/repayment_detail_5"/>

    <EditText
        android:id="@+id/bind_bank_ed_bank_card"
        android:hint="请输入银行卡号"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:maxLength="20"
        android:inputType="number"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/repayment_detail_5"
        android:layout_marginLeft="127.5dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp" android:layout_height="50dp"/>

    <View
        android:id="@+id/bind_bank_view_bank"
        android:background="@color/view_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/bind_bank_ed_bank_card"
        android:layout_width="0dp" android:layout_height="1dp"/>

    <TextView
        android:id="@+id/bind_bank_tv_bank"
        android:gravity="center_vertical"
        android:paddingLeft="74dp"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:text="工商银行"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bind_bank_view_bank"
        android:layout_width="0dp" android:layout_height="50dp"/>

    <ImageView
        android:id="@+id/bind_bank_img_bank"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/zhaoshang"
        app:layout_constraintTop_toTopOf="@id/bind_bank_tv_bank"
        app:layout_constraintBottom_toBottomOf="@id/bind_bank_tv_bank"
        android:layout_width="30dp" android:layout_height="30dp"/>

    <View
        android:id="@+id/bind_bank_view_phone"
        android:background="@color/view_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/bind_bank_tv_bank"
        android:layout_width="0dp" android:layout_height="1dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="预留手机号"
        android:textColor="@color/nine"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/bind_bank_view_phone"/>

    <TextView
        android:id="@+id/bind_bank_ed_phone"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:maxLength="11"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/bind_bank_view_phone"
        android:layout_marginLeft="127.5dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp" android:layout_height="50dp"/>


    <Button
        android:id="@+id/bind_bank_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bind_bank_ed_phone"
        android:layout_marginTop="41dp"
        android:background="@mipmap/button"
        android:text="申请"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_width="345dp"
            android:layout_height="44.5dp"/>
</android.support.constraint.ConstraintLayout>