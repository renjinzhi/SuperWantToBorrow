<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/repay_plan_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_rp_rv_periods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1期"
            android:textColor="@color/gray" android:textSize="14sp"/>
        <TextView
            android:id="@+id/item_rp_rv_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1000"
            android:textColor="@color/gray" android:textSize="14sp"/>
        <TextView
            android:id="@+id/item_rp_rv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2018-2-12"
            android:textColor="@color/gray" android:textSize="14sp"/>
        <TextView
            android:id="@+id/item_rp_rv_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待还款"
            android:textColor="@color/gray" android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:layout_below="@id/repay_plan_ll"
        android:background="@color/view_bg"
        android:layout_width="match_parent" android:layout_height="1dp"/>

</RelativeLayout>